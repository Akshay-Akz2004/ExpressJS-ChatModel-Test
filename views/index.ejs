<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chats</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="min-h-screen w-full bg-black flex items-center flex-col p-20 gap-14 justify-center">
       <form action="/chats/new" method="GET">
         <button class="bg-red-900 p-4 rounded-md text-white">ADD NEW CHAT</button>
       </form>
        <div class="p-10 w-full max-w-xl bg-slate-800 rounded-md">
            <h1 class="text-2xl text-white mb-8 text-center font-bold">Chat Messages</h1>
            <% chats.forEach(function(content) { %>
                <div class="flex items-center justify-between mb-5 gap-6">
                    <div class="w-full rounded-md p-5 flex flex-col bg-white">
                        <h2 class="p-2 text-lg font-semibold text-gray-800">
                            <%= content.from %> : <%= content.message %>
                        </h2>
                        <h3 class="p-2 text-gray-600">
                            Receiver: <%= content.to %>
                        </h3>
                    </div>
                    <div class="min-w-[120px] ">
                        <span class="text-xs text-right text-gray-300">
                            <%= content.timestamp ? content.timestamp : "" %>
                        </span>
                        <form action="/chats/edit/<%= content._id %>" method="GET">
                            <button class="bg-red-900 text-center mt-4 text-white p-2 rounded-md">Edit Message</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>

        
    </div>
</body>

</html>


